# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID_ALERT=your_alert_chat_id_here
TELEGRAM_CHAT_ID_REPORT=your_report_chat_id_here
TELEGRAM_ENABLED=true
TELEGRAM_PROGRESS_NOTIFICATIONS=true
TELEGRAM_FEEDBACK_CHAT_ID=your_feedback_chat_id_here

# LLM Configuration
# For Gemini API: Get your API key from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# For Ollama (alternative to Gemini)
LLM_PROVIDER=gemini
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llava:7b-v1.5-q4_0

# LLM Settings
LLM_ENABLED=true
LLM_TIMEOUT=120
LLM_TEMPERATURE=0.2
LLM_MAX_RETRIES=2
LLM_ENABLE_SCENE=true
LLM_ENABLE_STRUCTURED=true
LLM_ENABLE_RECOMMENDATIONS=true
LLM_ENABLE_REPORTS=true
LLM_NOTIFY_PROGRESS=true
